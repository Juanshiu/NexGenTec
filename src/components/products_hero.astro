---
import { supabase } from "@lib/supabase";
import type Products from "@interface/productos";

let { data, error } = await supabase
    .from('Productos')
    .select(`
        id_producto,
        nombre_producto,
        id_marca (
            nombre_marca
        ),
        descripcion,
        precio,
        img_producto,
        slug`)
    .range(0, 8)

    if (error) {
        console.log(error)
    }

let Productos: Products[] = data || []

