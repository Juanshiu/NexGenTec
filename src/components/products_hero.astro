---
import { supabase } from '../lib/supabase'
import type Products from "../interface/productos";
import FormattUrl from "./FormattUrl.astro";

let { data, error } = await supabase
    .from('Productos')
    .select('*')
    .range(0, 8)

    if (error) {
        console.log(error)
    }

let Productos: Products[] = data || []
---

    {
    Productos?.map((producto) => (
        <div class="flex flex-col flex-wrap gap-2">
            <img
                src={producto.img_producto}
                alt="Product image"
                class=" aspect-square rounded-lg object-cover border border-gray-200 w-full overflow-hidden "
            />
            <div class="flex flex-col gap-1.5">
                <h3 class="font-semibold">{producto.nombre_producto}</h3>
                <span class="font-semibold">{producto.id_marca.nombre_marca}</span>
                <p class="font-semibold">${producto.precio}</p>
                <FormattUrl url={producto.nombre_producto} class='inline-flex items-center justify-center whitespace-nowrap text-sm font-medium transition-all bg-black text-white h-9 rounded-md px-3 hover:scale-105 hover:shadow-2xl'>Ver más del producto</FormattUrl>
            </div>
        </div>
    ))}

