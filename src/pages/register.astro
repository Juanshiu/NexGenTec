---
import Layout from "@layouts/Layout.astro";
---

<Layout title='registrarse'>
    <main class=" flex-1 flex flex-col gap-4 items-center p-4 justify-center">
      <section class="w-full max-w-md h-svh mt-20">
        <h1
          class="font-semibold text-2xl text-zinc-900 w-full mb-1"
        >
          Registro
        </h1>
        <p class="text-zinc-500 dark:text-zinc-400 text-sm mb-8 w-full">
          ¿Ya tienes una cuenta? <a
            href="/signin"
            class=" text-blue-600 underline underline-offset-2 font-medium"
            >Inicia sesión</a
          >
        </p>
          <form
            action="/api/auth/register"
            method="post"
            class="grid grid-cols-1 gap-3 w-full"
          >

          <div class="grid grid-cols-1 gap-2">
            <label
              for="name"
              class="font-medium text-zinc-900 text-sm"
              >Nombre</label
            >
            <input
              id="name"
              type="text"
              name="name"
              class=" rounded-md py-1 px-3  border bg-zinc-50 border-zinc-300 focus:border-blue-500 focus:outline-none focus:ring-2 focus:ring-blue-600 focus:bg-white focus:ring-opacity-60"
              placeholder="Jhon Doe"
              required
            />
          </div>

            <div class="grid grid-cols-1 gap-2">
              <label
                for="email"
                class="font-medium text-zinc-900 text-sm"
                >Correo</label
              >
              <input
                id="email"
                type="email"
                name="email"
                class=" rounded-md py-1 px-3  border bg-zinc-50 border-zinc-300 focus:border-blue-500 focus:outline-none focus:ring-2 focus:ring-blue-600 focus:bg-white focus:ring-opacity-60"
                placeholder="example@gmail.com"
                required
              />
            </div>

            <div class="grid grid-cols-1 gap-2">
              <label
                for="password"
                class="font-medium text-zinc-900 text-sm"
                >Contraseña</label
              >
              <input
                id="password"
                type="password"
                name="password"
                class="rounded-md py-1 px-3  border bg-zinc-50 border-zinc-300  focus:border-blue-500 focus:outline-none focus:ring-2 focus:ring-blue-600 focus:bg-white focus:ring-opacity-60"
                required
                pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" 
                title="Debe contener al menos un número, una letra mayúscula, una letra minúscula y al menos 8 o más caracteres"
              />
            </div>
            
            <div class="grid grid-cols-1 gap-2">
              <label
                for="phone"
                class="font-medium text-zinc-900 text-sm"
                >Teléfono</label
              >
              <input
                id="phone"
                type="number"
                name="phone"
                class=" rounded-md py-1 px-3  border bg-zinc-50 border-zinc-300 focus:border-blue-500 focus:outline-none focus:ring-2 focus:ring-blue-600 focus:bg-white focus:ring-opacity-60"
                placeholder="322 458 3400"
                required
              />
            </div>

            <button
              type="submit"
              class=" bg-zinc-900 border-zinc-900 py-1.5 border rounded-md mt-4 text-zinc-100 font-medium text-sm focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 disabled:opacity-50 disabled:cursor-not-allowed"
              >Registrarse</button
            >
          </form>
        </section>
      </main>
</Layout>